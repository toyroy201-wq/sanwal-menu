    <!-- Message Box for Copy Confirmation (Replaces alert()) -->
    <div id="message-box" class="hidden">Item copied to clipboard!</div>

    <!-- Modal for Gemini Response -->
    <div id="gemini-modal-overlay">
        <div id="gemini-modal">
            <h3 class="text-xl font-bold mb-4 text-[#8B0000]">Meal Suggestion</h3>
            <div id="modal-content">
                <!-- Content or Spinner goes here -->
                <div class="spinner mx-auto" id="modal-spinner"></div>
            </div>
            <button onclick="closeModal()" class="mt-6 w-full bg-[#8B0000] text-white py-2 rounded-lg hover:bg-red-700 transition">Close</button>
        </div>
    </div>


    <script>
        // --- Setup ---
        const sections = {
            'home': 'home-page',
            'juices': 'juices-section',
            'breads': 'breads-section',
            'curries': 'curries-section',
            'fastfood': 'fastfood-section',
            'tea': 'tea-section' // <-- New section added
        };

        let currentSection = 'home';
        
        // --- Core Functions ---

        /**
         * Switches the visible content section and updates the navigation buttons.
         * @param {string} sectionName - The name of the section to display (e.g., 'juices').
         */
        function showSection(sectionName) {
            currentSection = sectionName;
            
            // Hide all sections
            Object.values(sections).forEach(id => {
                document.getElementById(id).classList.add('hidden');
            });

            // Show the selected section
            const newSection = document.getElementById(sections[sectionName]);
            if (newSection) {
                newSection.classList.remove('hidden');
            }

            // Update active state for navigation buttons
            document.querySelectorAll('#menu-nav .nav-button').forEach(button => {
                button.classList.remove('active', 'bg-red-700', 'text-white');
                button.classList.add('bg-gray-100', 'text-gray-800');
            });

            const activeNavButton = document.getElementById(`nav-${sectionName}`);
            if (activeNavButton) {
                activeNavButton.classList.add('active', 'bg-[#8B0000]', 'text-white');
                activeNavButton.classList.remove('bg-gray-100', 'text-gray-800');
            }
        }

        /**
         * Copies the item name and price to the clipboard and shows a confirmation message.
         * @param {string} item - The name of the menu item.
         * @param {string} price - The price of the menu item.
         */
        function copyToOrder(item, price) {
            const textToCopy = `${item} (${price})`;
            
            // Use document.execCommand('copy') as navigator.clipboard may not work in iframes
            const tempInput = document.createElement('textarea');
            tempInput.value = textToCopy;
            document.body.appendChild(tempInput);
            tempInput.select();
            
            try {
                document.execCommand('copy');
                showMessageBox("Copied: " + textToCopy);
            } catch (err) {
                console.error('Could not copy text: ', err);
                showMessageBox("Copy failed. Please manually copy: " + textToCopy);
            }
            document.body.removeChild(tempInput);
        }

        /**
         * Shows a temporary confirmation message box.
         * @param {string} message - The message to display.
         */
        function showMessageBox(message) {
            const box = document.getElementById('message-box');
            box.textContent = message;
            box.classList.remove('hidden');
            box.classList.add('show');
            
            // Hide after 3 seconds
            setTimeout(() => {
                box.classList.remove('show');
                setTimeout(() => box.classList.add('hidden'), 300); // Wait for transition to finish before hiding fully
            }, 3000);
        }


        // --- LLM Interaction Functions (Gemini API) ---

        const apiKey = ""; // Canvas will automatically provide the API key
        const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
        
        /** Retries a fetch request using exponential backoff. */
        async function fetchWithRetry(url, options, maxRetries = 5) {
            for (let i = 0; i < maxRetries; i++) {
                try {
                    const response = await fetch(url, options);
                    if (response.status === 429) {
                        throw new Error('Rate limit exceeded');
                    }
                    if (!response.ok) {
                        const errorBody = await response.text();
                        throw new Error(`API Error: ${response.status} - ${errorBody}`);
                    }
                    return response;
                } catch (error) {
                    if (i === maxRetries - 1) {
                        throw error;
                    }
                    // Exponential backoff wait time: 2^i seconds
                    const delay = Math.pow(2, i) * 1000 + Math.random() * 1000;
                    await new Promise(resolve => setTimeout(resolve, delay));
                }
            }
        }

        /**
         * Opens the modal and fetches a meal suggestion from the Gemini LLM.
         */
        async function suggestPerfectPairing() {
            const modalOverlay = document.getElementById('gemini-modal-overlay');
            const modalContent = document.getElementById('modal-content');
            
            modalOverlay.style.display = 'flex';
            modalContent.innerHTML = '<div class="spinner mx-auto" id="modal-spinner"></div><p class="text-center mt-4 text-gray-700">Thinking up the perfect Halal meal combination...</p>';

            const userQuery = "Using the provided menu sections (Juices, Breads, Curries, Mains, Tea), suggest a perfect, balanced, and delicious meal pairing for a customer at SANWAL O SMACHI HALAL RESTAURANT. The suggestion should include one item from 3 different categories (e.g., 1 Main, 1 Curry, 1 Bread, or 1 Main, 1 Tea, 1 Bread, etc.) and a brief, appetizing description of why they pair well. Format the output as a concise, three-section plan: Item 1, Item 2, Item 3. Use prices from the menu (e.g., Chicken Karahi - $15).";
            
            const systemPrompt = "You are a professional restaurant sommelier and chef specializing in South Asian cuisine. Your goal is to guide the customer to a delicious, perfectly paired meal using items from the menu. Be encouraging and focus on flavor harmony.";
            
            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const response = await fetchWithRetry(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                
                const result = await response.json();
                const text = result.candidates?.[0]?.content?.parts?.[0]?.text || "Sorry, I couldn't generate a suggestion right now. Please try again!";
                
                // Format the output nicely for the modal
                modalContent.innerHTML = `<div class="text-left whitespace-pre-wrap text-gray-700">${text}</div>`;

            } catch (error) {
                console.error("Gemini API call failed:", error);
                modalContent.innerHTML = `<p class="text-red-600 text-center">Connection Error. Please check your network or try again later. (Error: ${error.message})</p>`;
            }
        }

        /**
         * Closes the Gemini response modal.
         */
        function closeModal() {
            document.getElementById('gemini-modal-overlay').style.display = 'none';
            document.getElementById('modal-content').innerHTML = ''; // Clear content
        }

        // --- Initialization ---

        // Ensure the home page is shown on load
        window.onload = () => {
            showSection('home');
        };
    </script>
</body>
</html>

